<!DOCTYPE aspectj PUBLIC "-//AspectJ//DTD//EN" "https://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>
    <weaver options="-Xset:weaveJavaxPackages=true -verbose -showWeaveInfo">        <!-- only weave classes in our application-specific packages -->
        <include within="com.example.aop.spring.aspectj.*"/>
    </weaver>

    <aspects>
        <!-- weave in just this aspect -->
        <aspect name="com.example.aop.spring.aspectj.aspectj.LogAspect"/>
    </aspects>
</aspectj>